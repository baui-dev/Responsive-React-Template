/* src/components/Header/Header.css */
.header {
    background-color: #282c34;
    position: fixed;
    width: 100%;
    z-index: 10;
  }
  
  .logo {
    color: white;
    font-size: 1.5rem;
  }
  
  .hamburger {
    font-size: 1.5rem;
    color: white;
  }
  
  .menu {
    display: flex;
    flex-direction: column;
  }
  
  .menu-item {
    color: white;
    margin: 10px 0;
    text-decoration: none;
  }
  
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 250px;
    background-color: #282c34;
    overflow-x: hidden;
    transition: transform 0.3s ease;
    z-index: 20;
  }
  
  .close-btn {
    font-size: 1.5rem;
    color: white;
    background: none;
    border: none;
    padding: 10px;
    cursor: pointer;
    text-align: left;
  }
  
  .content.shifted {
    transform: translateX(250px);
    transition: transform 0.3s ease;
  }
  
  .overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 15;
  }
  
  @media (min-width: 768px) {
    .sidebar {
      display: none;
    }
  
    .menu {
      flex-direction: row;
    }
  
    .menu-item {
      margin: 0 1rem;
    }
  }
  